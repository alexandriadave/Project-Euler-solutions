public class program2 {

    static long max = 4000000;    

    public static void main(String[] args) {
        long sum = 0,a=0,b=1,c=0;    
        long count = 2;
        while (c < max) {
            c = a + b;
            count++;
            if (c % 2 == 0) {
                sum += c;
            }           
            a = b;
            b = c;
        }
        System.out.println(sum);
    }
}

